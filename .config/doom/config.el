(defun laluxx/tab-out-of-delimiters-or-indent (orig-fun &rest args)
  (if (and (eq evil-state 'insert)
           (or (member (char-before) '(?\( ?\" ?\' ?\[ ?\{))
               (member (char-after) '(?\) ?\" ?\' ?\] ?\}))))
      (progn
        (when (member (char-before) '(?\( ?\" ?\' ?\[ ?\{))
          (while (not (member (char-after) '(?\) ?\" ?\' ?\] ?\})))
            (forward-char 1)))
        (when (member (char-after) '(?\) ?\" ?\' ?\] ?\}))
          (forward-char 1)))
    (apply orig-fun args)))

